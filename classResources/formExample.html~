<input type="radio" name="rb" value="rbC3">Choice 3<br />
<input type="radio" name="rb" value="rbC4">Choice 4
</td>
</tr>

<!-- row 6: check boxes -->
<tr>
<td>check boxes</td>
<td>
<input type="checkbox" name="cb[]" value="cbC1">Choice 1<br />
<input type="checkbox" name="cb[]" value="cbC2">Choice 2<br />
<input type="checkbox" name="cb[]" value="cbC3">Choice 3<br />
<input type="checkbox" name="cb[]" value="cbC4">Choice 4
</td>
</tr>

